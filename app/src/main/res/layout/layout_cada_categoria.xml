<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagen_cada_categoria"
        android:src="@drawable/ic_busquedas_background">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madrid"
        android:id="@+id/nombre_cada_categoria"
        android:layout_toRightOf="@+id/imagen_cada_categoria"
        android:textColor="#000"
        android:layout_marginLeft="15dp"
        android:textSize="17sp">

    </TextView>

    <TextView
        android:id="@+id/descripcion_cada_categoria"
        android:layout_width="260dp"
        android:layout_height="69dp"
        android:layout_below="@+id/nombre_cada_categoria"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imagen_cada_categoria"
        android:text="Descripcion del lugar"
        android:textColor="#000">

    </TextView>

</RelativeLayout>