<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="200dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imagen_ciudad"
                android:src="@drawable/ic_busquedas_background">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/nombre_ciudad"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/imagen_ciudad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="Madrid"
                android:textColor="#000"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="100dp"
                android:layout_height="69dp"
                android:layout_below="@+id/nombre_ciudad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="jfjhaf uefhufh huehf hf jehejfh hef  euh hef  ehu u e eu"
                android:textColor="#000"
                android:textSize="10sp"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>