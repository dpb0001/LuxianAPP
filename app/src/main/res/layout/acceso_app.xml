<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtRecuperacion"
        android:layout_width="155dp"
        android:layout_height="24dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="192dp"
        android:minHeight="48dp"
        android:text="Recuperar contraseña"
        android:textColor="#3F51B5"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAcceso" />

    <TextView
        android:id="@+id/txtCreacion"
        android:layout_width="85dp"
        android:layout_height="22dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:minHeight="48dp"
        android:text="Crear cuenta"
        android:textColor="#3F51B5"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/btnAcceso"
        app:layout_constraintTop_toBottomOf="@+id/btnAcceso" />

    <EditText
        android:id="@+id/editTextCorreoAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/txtCorreoAcceso"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoAcceso" />

    <TextView
        android:id="@+id/txtCorreoAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:text="Correo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBienvenida" />

    <EditText
        android:id="@+id/editTextContrasenaAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword|textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="@+id/txtContrasenaAcceso"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasenaAcceso" />

    <TextView
        android:id="@+id/txtContrasenaAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Contraseña"
        app:layout_constraintStart_toStartOf="@+id/editTextCorreoAcceso"
        app:layout_constraintTop_toBottomOf="@+id/editTextCorreoAcceso" />

    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="101dp"
        android:text="LUXIAN"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Acceder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextContrasenaAcceso" />

</androidx.constraintlayout.widget.ConstraintLayout>